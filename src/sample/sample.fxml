<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="center" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
    <stylesheets>
        <URL value="@/css/style.css" />
    </stylesheets>
    <MenuBar>
        <Menu text="File">
            <MenuItem text="Exit" onAction="#ExitAction"/>
        </Menu>
    </MenuBar>
    <TextArea fx:id="textarea" editable="false" focusTraversable="false" VBox.vgrow="ALWAYS">
      <padding>
         <Insets left="5.0" right="5.0" top="5.0" />
      </padding></TextArea>
    <HBox spacing="5">
        <TextField fx:id="textfield" minHeight="50" onAction="#clickEnter" HBox.hgrow="ALWAYS">
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding></TextField>
        <Button minHeight="50" minWidth="200" onAction="#clickBtn" text="Send message">
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding></Button>
      <padding>
         <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
      </padding>
    </HBox>
</VBox>
